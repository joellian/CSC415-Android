<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lorem"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5"
        />

    <ImageView
        android:id="@+id/kaka"
        android:layout_width="200dp"
        android:layout_height="225dp"
        android:contentDescription="Image of Ricardo Kaka"
        android:src="@mipmap/kaka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lorem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player_description_box"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="3dp"
        android:text="Ricard Kaka is a Brazilian born soccer legend"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="225dp" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Goals"
        android:layout_margin="4dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>